@model string

@{
    ViewData["Title"] = "Likes";
}

<h1>Interests</h1>
<h3>Do you like it?</h3>
<div>
    <div class="tinder--cards">
        <div class="tinder--card">
            <img class="tinder--image" src="~/images/@Model" />
        </div>
    </div>
    <div class="tinder--buttons">
        <button onclick="location.href='@Url.Action("doDislike", "Likes")'" id="nope"><i class="fa fa-remove"></i></button>
        <button onclick="location.href='@Url.Action("Index", "History")'"><i class="fa fa-history"></i></button>
        <button onclick="location.href='@Url.Action("doLike", "Likes")'" id="love"><i class="fa fa-heart"></i></button>

    </div>
</div>

<script src="~/js/tinder.js" asp-append-version="true"></script>